ADD openstack-base-archive /openstack-base-source
RUN ln -s openstack-base-source/* /requirements \
    && mkdir -p /var/lib/kolla \
    && {{ macros.install_pip(['virtualenv'], constraints = false)}} \
    && virtualenv --system-site-packages /var/lib/kolla/venv

ENV PATH /var/lib/kolla/venv/bin:$PATH

RUN yum install -y wget && \
  wget https://files.pythonhosted.org/packages/07/ca/bc827c5e55918ad223d59d299fff92f3563476c3b00d0a9157d9c0217449/cryptography-2.6.1.tar.gz && \
  tar zxvf cryptography-2.6.1.tar.gz && \
  pushd cryptography-2.6.1 && \
  python setup.py install && \
  popd && \
  rm -rf cryptography-2.6.1 cryptography-2.6.1.tar.gz

